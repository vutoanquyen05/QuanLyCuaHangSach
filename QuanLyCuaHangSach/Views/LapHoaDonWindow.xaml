<Window x:Class="QuanLyCuaHangSach.Views.LapHoaDonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyCuaHangSach.Views"
        mc:Ignorable="d"
        
        xmlns:uc="clr-namespace:QuanLyCuaHangSach.Controls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        x:Name="window"
        
        Title="Hoá đơn"
        Width="850" Height="500">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="382*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <!--ControlBar-->
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=window}"></uc:ControlBarUC>
        </Grid>

        <!--Window-->
        <Grid Grid.ColumnSpan="2" Margin="0,24,0,0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--Main-->
            <materialDesign:Card Grid.Column="0" Margin="5 5 0 5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--Title-->
                    <TextBlock Grid.Row="0" Text="THÔNG TIN HOÁ ĐƠN" 
                        FontWeight="Bold" FontSize="20" 
                        Margin="10" HorizontalAlignment="Left"/>

                    <!--Thông tin nhập-->
                    <StackPanel Grid.Row="1">
                        <TextBox x:Name="txtMaHD" materialDesign:HintAssist.Hint="Mã hoá đơn" 
                             Margin="10 5" Width="250" Height="35" MaxWidth="250"
                             VerticalAlignment="Center" HorizontalAlignment="Left"
                             TextWrapping="Wrap"
                             IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"/>
                        <TextBox x:Name="txtMaKH" materialDesign:HintAssist.Hint="Mã khách hàng (Mua)"
                             Margin="10 5" Width="250" Height="35" MaxWidth="250"
                             VerticalAlignment="Center" HorizontalAlignment="Left"
                             TextWrapping="Wrap"
                             IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"/>
                        <TextBox x:Name="txtMaNV" materialDesign:HintAssist.Hint="Mã nhân viên (Bán hàng)"
                             Margin="10 5" Width="250" Height="35" MaxWidth="250"
                             VerticalAlignment="Center" HorizontalAlignment="Left"
                             TextWrapping="Wrap"
                             IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"/>
                        <DatePicker x:Name="dpNgayLap" materialDesign:HintAssist.Hint="Ngày lập"
                             Margin="10 5" Width="250" Height="35" MaxWidth="250"
                             VerticalAlignment="Center" HorizontalAlignment="Left"
                             IsEnabled="False"/>

                    </StackPanel>

                    <!--Title-->
                    <TextBlock Grid.Row="2" Text="THÊM SÁCH VÀO GIỎ" 
                        FontWeight="Bold" FontSize="20" 
                        Margin="10" HorizontalAlignment="Left"/>

                    <!--Thông tin giỏ-->
                    <StackPanel Grid.Row="3">
                        <TextBox x:Name="txtMaSach" materialDesign:HintAssist.Hint="Mã sách"
                             Margin="10 5" Width="250" Height="35" MaxWidth="250"
                             VerticalAlignment="Center" HorizontalAlignment="Left"
                             TextWrapping="Wrap"
                             IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"/>
                        <TextBox x:Name="txtSoLuong" materialDesign:HintAssist.Hint="Số lượng"
                             Margin="10 5" Width="250" Height="35" MaxWidth="250"
                             VerticalAlignment="Center" HorizontalAlignment="Left"
                             TextWrapping="Wrap"
                             IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"/>

                    </StackPanel>

                    <!--Nút chức năng-->
                    <StackPanel Grid.Row="4" Margin="0 15" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <Button x:Name="btnThem" Content="Thêm" Click="btnThem_Click"
                                Width="70" Margin="5"/>
                        <Button x:Name="btnSua" Content="Sửa" Click="btnSua_Click"
                                Width="70" Margin="5"/>
                        <Button x:Name="btnXoa" Content="Xóa" Click="btnXoa_Click"
                                Width="70" Margin="5"/>
                        <Button x:Name="btnLamMoi" Content="Làm mới" Click="btnLamMoi_Click"
                                Width="90" Margin="5"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!--Dữ liệu-->
            <materialDesign:Card Grid.Column="1" Margin="0 5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="400"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>


                    <!--Bảng dữ liệu-->
                    <DataGrid Grid.Row="0" x:Name="dgvLapHoaDon"
                              Margin="5" AutoGenerateColumns="True" IsReadOnly="True" SelectionChanged="dgvLapHoaDon_SelectionChanged">
                    </DataGrid>
                    
                    <!--Thanh toán-->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        
                        <!--Giá-->
                        <TextBlock Grid.Column="0" Text="Tổng tiền: "
                                   FontWeight="Bold" FontSize="20"
                                   Margin="0 0 10 0" VerticalAlignment="Center" />
                        <TextBlock Grid.Column="1" x:Name="txtTongTien" Text="0"
                                   FontWeight="Bold" FontSize="20" Foreground="Red"
                                   Margin="0 0 10 0" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="VND"
                                   FontWeight="Bold" FontSize="20" Foreground="Red"
                                   VerticalAlignment="Center"/>

                        <!--Nút-->
                        <Button Grid.Column="3" x:Name="btnThanhToan" Content="Thanh toán"
                                FontWeight="Bold" FontSize="16"
                                Width="120" Height="40" HorizontalAlignment="Right"/>

                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Window>
