<Window x:Class="QuanLyCuaHangSach.Views.HoaDonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyCuaHangSach.Views"
        mc:Ignorable="d"
        
        xmlns:uc="clr-namespace:QuanLyCuaHangSach.Controls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        x:Name="window"
        Loaded="window_Loaded"
        
        Title="Hoá đơn"
        Width="850" Height="500">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <!--ControlBar-->
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=window}"></uc:ControlBarUC>
        </Grid>

        <!--Window-->
        <materialDesign:Card Grid.Row="1"
                             Margin="5" VerticalAlignment="Stretch">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    
                    <!--Số lượng hoá đơn-->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Số lượng hóa đơn:"
                                   FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="5 0"/>
                        <TextBlock x:Name="txtSoLuongHD" Text="0" Foreground="Red"
                                   FontWeight="Bold" FontSize="20" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!--Lọc-->
                    <Grid Grid.Column="1" HorizontalAlignment="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        
                        <!--Thông tin cần lọc-->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <DatePicker x:Name="dtpTuNgay" materialDesign:HintAssist.Hint="Từ ngày" 
                                    Width="120" Margin="5,0" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                            <DatePicker x:Name="dtpDenNgay" materialDesign:HintAssist.Hint="Đến ngày" 
                                    Width="120" Margin="5,0" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                        </StackPanel>

                        <!--Nút lọc-->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="btnLoc" Content="Lọc" Click="btnLoc_Click"
                                Margin="5,0" Width="80"  
                                Style="{StaticResource MaterialDesignRaisedButton}"/>
                            <Button x:Name="btnHienThiTatCa" Content="Hiển thị tất cả" Click="btnHienThiTatCa_Click"
                                Margin="5,0" Width="120" 
                                Style="{StaticResource MaterialDesignRaisedButton}"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!--Vạch kẻ-->
                <Grid Grid.Row="1">
                    <Separator></Separator>
                </Grid>

                <!--Bảng dữ liệu-->
                <DataGrid Grid.Row="1" x:Name="dgvHoaDon"
                              Margin="5" AutoGenerateColumns="True" IsReadOnly="True">
                </DataGrid>

                <!--Tổng doanh thu-->
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <TextBlock Text="DOANH THU:"
                               FontWeight="Bold" FontSize="20" Margin="5"/>
                    <TextBlock x:Name="txtTongDoanhThu" Text="0"
                               FontWeight="Bold" FontSize="20" Foreground="Red" Margin="0 5"/>
                    <TextBlock Text=" VND"
                               FontWeight="Bold" FontSize="20" Foreground="Red" Margin="0 5"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
