<Window x:Class="QuanLyCuaHangSach.Views.NhanVienWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyCuaHangSach.Views"
        mc:Ignorable="d"
        
        xmlns:uc="clr-namespace:QuanLyCuaHangSach.Controls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        x:Name="window"
        Loaded="window_Loaded"
        
        Title="Nhân Viên"
        Width="850" Height="500">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <!--ControlBar-->
        <Grid Grid.Row="0">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=window}"></uc:ControlBarUC>
        </Grid>

        <!--Window-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--Main-->
            <materialDesign:Card Grid.Column="0" Margin="5 5 0 5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--Title-->
                    <TextBlock Grid.Row="0" Text="THÔNG TIN NHÂN VIÊN" 
                        FontWeight="Bold" FontSize="20" 
                        Margin="10" HorizontalAlignment="Left"/>

                    <!--Thông tin nhập-->
                    <StackPanel Grid.Row="1">
                        <TextBox materialDesign:HintAssist.Hint="Mã nhân viên" x:Name="txtMaNV"
                             Margin="10 5" Width="250" Height="35" MaxWidth="250" 
                             TextWrapping="Wrap"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"/>
                        <TextBox materialDesign:HintAssist.Hint="Họ và tên" x:Name="txtTenNV"
                             Margin="10 5" Width="250" Height="35" MaxWidth="250" 
                             TextWrapping="Wrap"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"/>
                        <ComboBox materialDesign:HintAssist.Hint="Chức vụ" x:Name="cboChucVu" 
                             Margin="10 5" Width="250" Height="35"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             IsEnabled="{Binding Path=IsChecked, ElementName=FilledComboBoxEnabledCheckBox}">
                            <ComboBoxItem Content="Nhân viên" />
                            <ComboBoxItem Content="Quản lý" />
                        </ComboBox>
                        <TextBox materialDesign:HintAssist.Hint="Số điện thoại" x:Name="txtSDT"
                             Margin="10 5" Width="250" Height="35" MaxWidth="250" 
                             TextWrapping="Wrap"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"/>
                        <TextBox materialDesign:HintAssist.Hint="Mã quản lý" x:Name="txtMaQL"
                             Margin="10 5" Width="250" Height="35" MaxWidth="250"  
                             TextWrapping="Wrap"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"/>
                    </StackPanel>

                    <!--Nút chức năng-->
                    <StackPanel Grid.Row="2" Margin="0 15" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <Button x:Name="btnThem" Content="Thêm" Click="btnThem_Click"
                                Width="70" Margin="5"/>
                        <Button x:Name="btnSua" Content="Sửa" Click="btnSua_Click"
                                Width="70" Margin="5"/>
                        <Button x:Name="btnXoa" Content="Xóa" Click="btnXoa_Click"
                                Width="70" Margin="5"/>
                        <Button x:Name="btnLamMoi" Content="Làm mới" Click="btnLamMoi_Click"
                                Width="90" Margin="5"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!--Dữ liệu-->
            <materialDesign:Card Grid.Column="1" Margin="0 5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--Lọc-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <!--Thông tin cần lọc-->
                        <TextBox Grid.Column="0" x:Name="txtLocHoTen" materialDesign:HintAssist.Hint="Họ và tên"
                             Width="175" Height="40" Margin="5 0" MaxWidth="175" MaxHeight="40"
                             TextWrapping="Wrap"
                             IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                             Style="{StaticResource MaterialDesignFilledTextBox}"/>
                        <ComboBox Grid.Column="1" x:Name="cboLocChucVu" materialDesign:HintAssist.Hint="Chức vụ"
                             Width="175" Margin="5 0"
                             IsEnabled="{Binding Path=IsChecked, ElementName=FilledComboBoxEnabledCheckBox}"
                             Style="{StaticResource MaterialDesignFilledComboBox}">
                            <ComboBoxItem Content="Nhân viên" />
                            <ComboBoxItem Content="Quản lý" />
                        </ComboBox>
                        <!--Nút-->
                        <Button Grid.Column="2" x:Name="btnTimMaNV" Content="Lọc" 
                                Margin="10 0" Width="80" Height="35" HorizontalAlignment="Right"/>
                    </Grid>

                    <!--Bảng dữ liệu-->
                    <DataGrid Grid.Row="1" x:Name="dgvNhanVien"
                              Margin="5"  AutoGenerateColumns="True" IsReadOnly="True" SelectionChanged="dgvNhanVien_SelectionChanged">
                    </DataGrid>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Window>
